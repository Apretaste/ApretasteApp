<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.apretaste">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_new"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppWithBar">
        <activity
            android:name="apretaste.activity.MainActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/App" />
        <activity
            android:name="apretaste.activity.LoginActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/App">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="apretaste.settings.Settings_buzon"
            android:label="Cambiar buzón personal"
            android:parentActivityName="apretaste.settings.SettingsActivity" />
        <activity
            android:name="apretaste.settings.Settings_nauta"
            android:configChanges="orientation|screenSize"
            android:label="Configuración de nauta"
            android:parentActivityName="apretaste.settings.SettingsActivity" />
        <activity
            android:name="apretaste.settings.Settings_about"
            android:label="Sobre esta app"
            android:parentActivityName="apretaste.settings.SettingsActivity" />
        <activity
            android:name="apretaste.settings.SettingsActivity"
            android:label="Ajustes"
            android:parentActivityName="apretaste.activity.MainActivity" />
        <activity
            android:name="apretaste.activity.NotificationsActivity"
            android:configChanges="orientation|screenSize"
            android:label="Notificaciones"
            android:parentActivityName="apretaste.activity.MainActivity" />
        <activity
            android:name="apretaste.activity.RecentActivity"
            android:label="Historial"
            android:parentActivityName="apretaste.activity.MainActivity" />
        <activity
            android:name="apretaste.activity.ProfileActivity"
            android:configChanges="orientation|screenSize"
            android:label="Perfil"
            android:parentActivityName="apretaste.activity.MainActivity" />
        <activity
            android:name="apretaste.ServiceDetails"
            android:label="Detalles"
            android:parentActivityName="apretaste.activity.MainActivity" />
        <activity
            android:name="apretaste.activity.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/App" />

    </application>

</manifest>