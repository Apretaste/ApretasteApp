<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/annonce.main.coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlHardcoded"
    >


    <TextView
        android:visibility="gone"
        android:textSize="20sp"
        android:id="@+id/tvNoResult"
        android:textColor="@color/negro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="El Servicio que busca no existe en Apretaste"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ll_l"
        android:layout_toEndOf="@+id/ll_l"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <LinearLayout
        android:id="@+id/ll_l"
        android:layout_marginTop="55dp"
        android:layout_width="match_parent"
        android:background="@color/red"
        android:visibility="gone"
        android:layout_height="20dp">

        <TextView

            android:layout_marginLeft="100dp"
            android:text="@string/text_latest"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


    <ViewSwitcher

        android:id="@+id/homeSwitcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/supbar">

        <GridView
            android:id="@+id/gridview"


            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="55dp"
            android:clipToPadding="false"
            android:columnWidth="90dp"
            android:horizontalSpacing="10dp"
            android:numColumns="auto_fit"
            android:paddingBottom="85dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" />

        <WebView
            android:id="@+id/mainWebView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="55dp"></WebView>
    </ViewSwitcher>


</RelativeLayout>
