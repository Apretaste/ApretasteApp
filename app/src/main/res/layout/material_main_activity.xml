<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/annonce.main.coordinator"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:ignore="RtlHardcoded"
	>

	<android.support.design.widget.AppBarLayout
		android:id="@+id/flexible.example.appbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
		>

		<android.support.design.widget.CollapsingToolbarLayout
			android:id="@+id/collapsing_toolbar"
			android:layout_width="match_parent"
			android:layout_height="160dp"
			app:title="Apretaste!"
			app:expandedTitleMarginBottom="30dp"
			app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
			app:expandedTitleTextAppearance="@style/CollapsingTextAppearance.Inverse"
			app:contentScrim="?colorPrimary"
			>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="160dp"
				android:orientation="vertical">
				<LinearLayout
					android:layout_width="match_parent"
					android:background="#5EBB47"
					android:id="@+id/supbar"
					android:layout_height="55dp"
					android:orientation="horizontal"
					android:gravity="bottom">
				</LinearLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:background="#962F1F"
					android:layout_height="match_parent">

				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				app:layout_anchor="@id/supbar"
				android:id="@+id/profileLayout"
				android:layout_marginLeft="15dp"
				android:layout_marginTop="20dp">
				<ImageView
					android:layout_width="70dp"
					android:layout_height="70dp"
					android:id="@+id/profile_pict"
					app:srcCompat="@drawable/ic_person_black_24dp"
					android:background="@drawable/white_circle" />
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:gravity="center_vertical"
					android:padding="5dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="/@rarte"
						android:paddingBottom="4dp"
						android:id="@+id/profile_name"
						android:textAppearance="@style/TextAppearance.Header"
						android:textColor="#962F1F" />
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/profile_credit"
						android:text="$100"
						android:textAppearance="@style/TextAppearance.Header"
						android:textColor="#5EBB47" />
				</LinearLayout>
			</LinearLayout>

			<android.support.v7.widget.Toolbar
				android:id="@+id/flexible.example.toolbar"
				android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"
				android:background="@null"
				app:layout_collapseMode="pin"
				/>
		</android.support.design.widget.CollapsingToolbarLayout>
	</android.support.design.widget.AppBarLayout>
		<GridView xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/gridview"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:columnWidth="90dp"
			android:numColumns="auto_fit"
			android:verticalSpacing="10dp"
			android:horizontalSpacing="10dp"
			android:stretchMode="columnWidth"
			android:paddingBottom="85dp"
			android:paddingTop="5dp"
			android:paddingLeft="4dp"
			android:paddingRight="4dp"
			android:clipToPadding="false"
			android:nestedScrollingEnabled="true"
			android:background="@drawable/filled_corners"
			android:elevation="4dp"
			android:layout_margin="8dp"

			app:behavior_overlapTop="28dp"
			app:layout_behavior="@string/appbar_scrolling_view_behavior"
			></GridView>
	<WebView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/mainWebView"
		android:visibility="gone"></WebView>
	<!--android.support.v4.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbars="none"
		app:behavior_overlapTop="28dp"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		-->

					<!--ViewSwitcher
						android:id="@+id/homeSwitcher"
						android:layout_width="match_parent"
						android:layout_height="match_parent">
						<GridView xmlns:android="http://schemas.android.com/apk/res/android"
							android:id="@+id/gridview"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:columnWidth="90dp"
							android:numColumns="auto_fit"
							android:verticalSpacing="10dp"
							android:horizontalSpacing="10dp"
							android:stretchMode="columnWidth"
							android:paddingBottom="15dp"
							android:clipToPadding="false"
							/>
						<WebView
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:id="@+id/mainWebView"></WebView>
					</ViewSwitcher-->
	<!--/android.support.v4.widget.NestedScrollView-->

	<android.support.design.widget.FloatingActionButton
		android:id="@+id/ib_settings_main"
		style="@style/FabTheme"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="10dp"
		android:elevation="8dp"
		android:onClick="open_activitys"
		app:fabSize="mini"
		app:srcCompat="@drawable/ic_settings_black_24dp"
		app:layout_anchor="@id/supbar"
		app:layout_anchorGravity="bottom|end"
		tools:ignore="RtlHardcoded"
		/>

	<android.support.design.widget.FloatingActionButton
		android:id="@+id/ib_recent_main"
		style="@style/FabTheme"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="55dp"
		android:elevation="8dp"
		android:onClick="open_activitys"
		app:fabSize="mini"
		app:srcCompat="@drawable/ic_history_black_24dp"
		app:layout_anchor="@id/supbar"
		app:layout_anchorGravity="bottom|end"
		tools:ignore="RtlHardcoded"
		/>


	<android.support.design.widget.FloatingActionButton
		android:id="@+id/ib_notifications_main"
		style="@style/FabTheme"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="100dp"
		android:elevation="8dp"
		android:onClick="open_activitys"
		app:fabSize="mini"
		app:srcCompat="@drawable/ic_notifications_black_24dp"
		app:layout_anchor="@id/supbar"
		app:layout_anchorGravity="bottom|end"
		tools:ignore="RtlHardcoded"
		/>
	<TextView
		android:id="@+id/notifCunter"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="4dp"
		android:paddingRight="4dp"
		android:text="0"
		android:elevation="8dp"
		android:textColor="#FFF"
		android:background="@drawable/badge"
		app:layout_anchor="@id/ib_notifications_main"
		app:layout_anchorGravity="bottom|center"/>
	<android.support.design.widget.FloatingActionButton
		android:id="@+id/ib_sync_main"
		style="@style/FabTheme"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="20dp"
		android:elevation="8dp"
		app:fabSize="normal"
		app:srcCompat="@drawable/ic_sync_black_24dp"
		android:layout_gravity="bottom|end"
		tools:ignore="RtlHardcoded"
		android:onClick="open_activitys"
		/>



</android.support.design.widget.CoordinatorLayout>
