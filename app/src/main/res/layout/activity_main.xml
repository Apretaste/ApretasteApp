<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    style="@style/App"
    tools:context="com.example.apretaste.com.apretaste.apretaste.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vsw">
            <LinearLayout
                android:onClick="open_activitys"
                android:id="@+id/ib_profile_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/profile_pict"
                    app:srcCompat="@drawable/ic_person_black_24dp"
                    android:background="@drawable/corners"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#55F"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_marginTop="-2dp"
                        android:id="@+id/profile_credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"/>

                </LinearLayout>
            </LinearLayout>
            <ImageButton
                android:visibility="gone"
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corners"
                android:padding="5dp"
                android:onClick="open_activitys"
                app:srcCompat="@drawable/ic_home_black_24dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageButton
                android:id="@+id/ib_sync_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corners"
                android:padding="5dp"
                android:onClick="open_activitys"
                app:srcCompat="@drawable/ic_sync_black_24dp"
                android:layout_marginRight="10dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corners"
                android:padding="5dp"
android:id="@+id/ib_recent_main"
                android:onClick="open_activitys"
                app:srcCompat="@drawable/ic_history_black_24dp"

                android:layout_marginRight="10dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corners"
                android:padding="5dp"
                android:id="@+id/ib_settings_main"
                android:onClick="open_activitys"
                app:srcCompat="@drawable/ic_settings_black_24dp"
                android:layout_marginRight="10dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corners"
                    android:padding="5dp"
                    android:onClick="open_activitys"
                    android:id="@+id/ib_notifications_main"
                    app:srcCompat="@drawable/ic_notifications_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:id="@+id/notifCunter"
                    android:layout_centerInParent="true"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <ViewSwitcher
                android:id="@+id/homeSwitcher"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <GridView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/gridview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnWidth="90dp"
                    android:numColumns="auto_fit"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="10dp"
                    android:stretchMode="columnWidth"
                    android:paddingBottom="15dp"
                    android:clipToPadding="false"
                    />
                <WebView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/mainWebView"></WebView>
            </ViewSwitcher>



        </LinearLayout>




</LinearLayout>
